<div class="container">
<form class="form-inline" action="/productSearch" method="get">
  <div class="form-group mb-2">
    <label for="itemName" class="sr-only"><strong>Product Name:</strong></label>
    <input type="text" class="form-control" name="itemName" id="itemName" placeholder="Product Name" required>
  </div>
  <button type="submit" class="btn btn-primary mb-2">Search</button>
</form>
</div>
  
        
<div class="container">
  <h1 class="text-center mt-5 mb-4 text-Secondary">Inventory</h1>
  <table class="table table-striped table-bordered">
      <thead class="thead-dark">
          <tr>
              <th class="bg-dark text-light">Name</th>
              <th class="bg-dark text-light">Stock</th>
              <th class="bg-dark text-light">Price</th>
          </tr>
      </thead>
      <tbody>
          <% items.forEach(function(item) { %>
          <tr>
              <td><%= item.name %></td>
              <td><%= item.stock %></td>
              <td><%= item.price %></td>
          </tr>
          <% }); %>
      </tbody>
  </table>
</div>


