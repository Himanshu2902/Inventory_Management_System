<div class="container" style="background-color: antiquewhite;">
  <form method="post" action="/updateStock">
    <div class="container">
    <div class="form-group ">
      <label for="mobileNumber"><strong>Mobile Number:</strong> </label>
      <input type="tel" class="form-control " id="mobileNumber" name="mobileNumber" placeholder="Enter Customer Mobile Number" required>
    </div>
  </div>
<hr>

<div class="container">
    <div class="form-group">
      <div id="item-form" class="row">
        <div class="col">
          <input type="text" class="form-control" id="itemName_0" name="itemName[]" placeholder="Item Name" required>
        </div>
        <div class="col">
          <input type="number" class="form-control" id="itemQty_0" name="itemQty[]" placeholder="Qty" required>
        </div>
      </div>
    </div>
  </div>
  <br>
  <div class="form-group row">
    <div class="d-flex justify-content-center">
      <button type="button" id="addItemBtn" class="btn btn-primary" onclick="addItem()">Add Item</button>
    </div>
  </div>
  <br>
  <hr> 
  <br>

  <div class="form-group row" style="background-color:white;">
    <div class="d-flex justify-content-center">
      <button type="submit" class="btn btn-outline-success btn-lg">Submit</button>
    </div>
  </div>
  </form> 
</div>
  <script type="text/javascript">
    function addItem() {
      var form = document.getElementById("item-form");
      var itemDiv = document.createElement("div");
      itemDiv.className = "row mt-2";
      var itemNum = form.childElementCount - 1; // subtract 1 for the button element
      var itemNameInput = document.createElement("input");
      itemNameInput.setAttribute("type", "text");
      itemNameInput.setAttribute("class", "form-control col");
      itemNameInput.setAttribute("id", "itemName_" + itemNum);
      itemNameInput.setAttribute("name", "itemName[]");
      itemNameInput.setAttribute("placeholder", "Item Name");
      itemNameInput.required = true;
      itemDiv.appendChild(itemNameInput);
      var itemQtyInput = document.createElement("input");
      itemQtyInput.setAttribute("type", "number");
      itemQtyInput.setAttribute("class", "form-control col");
      itemQtyInput.setAttribute("id", "itemQty_" + itemNum);
      itemQtyInput.setAttribute("name", "itemQty[]");
      itemQtyInput.setAttribute("placeholder", "Qty");
      itemQtyInput.required = true;
      itemDiv.appendChild(itemQtyInput);
      form.appendChild(itemDiv);
    }
  </script>

